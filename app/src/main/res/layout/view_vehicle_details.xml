<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/vehicleImage"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:elevation="2dp"
        android:scaleType="centerCrop"
        android:background="@drawable/car_image"
        android:layout_width="130dp"
        android:layout_height="130dp" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:text="CAR TYPE : "
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="start"
            android:textAllCaps="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCarType"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textColor="@color/colorLightOrange"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:text="CAR BRAND : "
            android:textSize="20sp"
            android:textAllCaps="true"
            android:layout_gravity="start"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCarBrand"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:textColor="@color/colorLightOrange"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:text="CAR MODEL : "
            android:textSize="20sp"
            android:textAllCaps="true"
            android:layout_gravity="start"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginEnd="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCarModel"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:textColor="@color/colorLightOrange"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:text="CAR YEAR : "
            android:textSize="20sp"
            android:textAllCaps="true"
            android:layout_gravity="start"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginEnd="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCarYear"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:textColor="@color/colorLightOrange"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:text="CAR COLOR : "
            android:textSize="20sp"
            android:textAllCaps="true"
            android:layout_gravity="start"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginEnd="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCarColor"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textColor="@color/colorLightOrange"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:text="LICENSE PLATE : "
            android:textSize="20sp"
            android:textAllCaps="true"
            android:layout_gravity="start"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCarLicense"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorLightOrange"
            android:layout_marginEnd="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/startDate"
            android:textSize="18sp"
            android:gravity="center"
            android:elevation="1dp"
            android:padding="2dp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:background="@drawable/rounded_textview"
            android:layout_margin="5dp"
            android:text="@string/select_start_date"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/dueDate"
            android:textSize="18sp"
            android:gravity="center"
            android:elevation="1dp"
            android:padding="2dp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rounded_textview"
            android:layout_margin="5dp"
            android:text="@string/select_due_date"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/rentButton"
            android:text="Rent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/reservedButton"
            android:text="Reserved"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>